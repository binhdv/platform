<jbosscache xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
            xsi:schemaLocation="urn:jboss:jbosscache-core:config:3.2 http://www.jboss.org/schema/jbosscache/jbosscache-config-3.2.xsd"
            xmlns="urn:jboss:jbosscache-core:config:3.2">
  <jmxStatistics
      enabled="true" />
  <locking
      useLockStriping="false"
      concurrencyLevel="64"
      lockParentForChildInsertRemove="false"
      lockAcquisitionTimeout="${exo.jcr.systemworkspace.lockacquisitiontimeout:20000}" />
  <clustering
      mode="replication"
      clusterName="${exo.cluster.partition.name}-${jbosscache-cluster-name}">
    <stateRetrieval
        timeout="${exo.jcr.cluster.systemworkspace.stateretrieval.timeout:20000}"
        fetchInMemoryState="${exo.jcr.cluster.systemworkspace.stateretrieval.fetchinmemorystate:false}" />
    <jgroupsConfig
        configFile="${exo.jcr.cluster.jgroups.config}" />
    <sync
        replTimeout="${exo.jcr.cluster.systemworkspace.sync.repltimeout:15000}" />
  </clustering>
  <!-- Eviction configuration -->
  <eviction
      wakeUpInterval="${exo.jcr.systemworkspace.eviction.wakeupinterval:2000}">
    <default
        algorithmClass="org.jboss.cache.eviction.LRUAlgorithm"
        actionPolicyClass="org.exoplatform.services.jcr.impl.dataflow.persistent.jbosscache.ParentNodeEvictionActionPolicy"
        eventQueueSize="${exo.jcr.systemworkspace.eviction.eventqueuesize:1000000}">
      <property
          name="maxNodes"
          value="${exo.jcr.systemworkspace.eviction.maxnodes:300000}" />
      <property
          name="timeToLive"
          value="${exo.jcr.systemworkspace.eviction.timetolive:60000}" />
    </default>
  </eviction>
</jbosscache>
